@model SpecialOlympics.Models.VoluntarioCampeonato

@{
    ViewData["Title"] = "Editar VoluntarioCampeonato";
}

<h1>Editar</h1>

<h4>VoluntarioCampeonato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVoluntarioCampeonato" />
            <div class="form-group">
                <label asp-for="IdVoluntario" class="control-label"></label>
                <input asp-for="IdVoluntario" class="form-control" readonly/>
                <span asp-validation-for="IdVoluntario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCampeonato" class="control-label"></label>
                <input asp-for="IdCampeonato" class="form-control" readonly/>
                <span asp-validation-for="IdCampeonato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcion" class="control-label"></label>
                <input asp-for="Funcion" class="form-control" />
                <span asp-validation-for="Funcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
