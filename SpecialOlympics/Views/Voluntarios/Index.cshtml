@model IEnumerable<SpecialOlympics.Models.Voluntario>

@{
    ViewData["Title"] = "Voluntarios";    
}


<h1>Lista de Voluntarios</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Nuevo voluntario</a>
</p>
<div style="overflow-x: auto;">
    <table class="table table-striped table-bordered nowrap partialDataTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProfileImagePath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActivo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (string.IsNullOrEmpty(item.ProfileImagePath))
                        {
                            <img class="profileImg" src="~/images/UsuarioDefault.png" />
                        }
                        else
                        {
                            <img class="profileImg" src="~/images/@item.ProfileImagePath" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActivo)
                    </td>
                    <td>
                        <a class="icon iconInfo" asp-action="Edit" asp-route-id="@item.IdVoluntario"><i class="fas fa-pen-square"></i></a>
                        @*<a asp-action="Details" asp-route-id="@item.IdVoluntario">Details</a> |*@
                        <a class="icon iconDanger" asp-action="Delete" asp-route-id="@item.IdVoluntario"><i class="fas fa-minus-square"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("PartialDataTable");}
}