@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<SpecialOlympics.Models.Campeonato>

@{
    ViewData["Title"] = "Campeonatos";
}

@section Scripts {
    @{await Html.RenderPartialAsync("PartialDataTable");}
}

<h1>Lista de Campeonatos</h1>
<p>
    <a class="btn btn-info" asp-action="Create">Nuevo campeonato</a>
</p>
<div style="overflow-x: auto;">
    <table class="table table-striped table-bordered partialDataTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaFin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ubicacion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaFin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ubicacion)
                    </td>
                    <td>
                        <a class="icon iconInfo" asp-action="Edit" asp-route-id="@item.IdCampeonato"><i class="fas fa-pen-square"></i></a>
                        <a class="icon iconDanger" asp-action="Delete" asp-route-id="@item.IdCampeonato"><i class="fas fa-minus-square"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>